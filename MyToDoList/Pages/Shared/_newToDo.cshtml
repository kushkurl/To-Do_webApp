@model MyToDoList.Models.ToDos

<form method="post">
    <div class="row" style="margin:0px">
        <div class="col-sm" style="display:inline-grid;padding:10px">
            <label asp-for="@Model.Title"></label>
            <input style="min-height:30px; min-width:300px;border-radius:5px;font-size:1rem" asp-for="@Model.Title" />
            
        </div>
        <div class="col-sm" style="display: inline-grid; padding: 10px">
            <label asp-for="@Model.DueDate"></label>
            <input style="min-height: 30px; min-width: 300px; border-radius: 5px; font-size: 1rem" type="date" asp-for="@Model.DueDate" />
            
        </div>
    </div>
    <div style="display: inline-grid; padding: 10px; width:100%">
        <label asp-for="@Model.Description"></label>
        <textarea style="min-height: 105px; min-width: 625px; border-radius: 5px; font-size: 1rem" type="text" asp-for="@Model.Description"></textarea>

    </div>


    <div style="display:block">
        <input style="background-color: black;margin-left:9px; float:right; font-size: .9rem" value="Cancel" asp-page-handler="Cancel"  onclick="CloseForm();" type="submit" class="save-button">
        <input style="position: relative; left: 77%; background-color: black; font-size: .9rem" type="submit" value="Add" class="save-button" />

    </div>
</form>



